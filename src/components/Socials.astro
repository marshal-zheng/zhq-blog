---
import { SOCIALS } from "@config";
import LinkButton from "./LinkButton.astro";
import socialIcons from "@assets/socialIcons";

export interface Props {
  centered?: boolean;
}

const { centered = false } = Astro.props;
---

<div class={`social-icons inline-block ${centered ? "flex" : ""}`}>
  {
    SOCIALS.filter(social => social.active).map(social => (
      social.name === "WeChat" ? (
        <div class="relative group inline-block">
          <LinkButton
            href={social.href}
            className="link-button wechat-trigger"
            title={social.linkTitle}
          >
            <Fragment set:html={socialIcons[social.name]} />
            <span class="sr-only">{social.linkTitle}</span>
          </LinkButton>
            <div class="absolute bottom-full w-[90px] hidden left-1/2 transform -translate-x-1/2 group-hover:flex justify-center z-50 wechat-qrcode-container">
              <div class="bg-white p-2 border border-gray-300 rounded shadow-lg">
                <img 
                  data-src="/assets/wechat-qrcode.jpg" 
                  alt="WeChat QR Code" 
                  class="w-32 h-auto wechat-qrcode-img" 
                  style="opacity: 0; transition: opacity 0.3s ease-in-out;"
                />
              </div>
            </div>
        </div>
      ) : (
        <LinkButton
          href={social.href}
          className="link-button inline-block"
          title={social.linkTitle}
        >
          <Fragment set:html={socialIcons[social.name]} />
          <span class="sr-only">{social.linkTitle}</span>
        </LinkButton>
      )
    ))
  }
</div>

