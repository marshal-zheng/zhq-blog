---
export interface Props {
  noPadding?: boolean;
  ariaHidden?: boolean;
  class?: string;
}

const { noPadding = false, ariaHidden = true, class: className = "" } = Astro.props;
---

<div class={`max-w-3xl mx-auto ${noPadding ? "px-0" : "px-4"} ${className}`}>
  <hr class="border-skin-line" aria-hidden={ariaHidden} />
</div>
